<div class="container">

  <table class="bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @creature.name %></td>
        <td><i><%= @creature.description %></i></td>
      </tr>
    </tbody>
  </table>

  <div class="container center">
    <a class="waves-effect waves-light btn">
      <%= button_to "Delete Creature", @creature, method: :delete %>
    </a>
  </div>

</div>
